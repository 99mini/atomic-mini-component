{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "/dist",
    "sourceMap": false,
    "outDir": "/dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "baseUrl": "../",
    "paths": {
      "@atom/*": ["atom/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["../atom/**/*.*"],
  "exclude": ["../../dist", "../../node_modules", "../**/*.test.tsx", "../**/*.stories.tsx"]
}
