{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@atom/*": ["atom/*"],
      "@molecular/*": ["molecular/*"]
    }
  },
  "include": ["./src/**/*.*"],
  "exclude": ["./dist", "./node_modules", "./src/**/*.test.tsx", "./src/**/*.stories.tsx"]
}
