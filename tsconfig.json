{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@atom/*": ["atom/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["./src/**/*.*", "./src/atom/**/*.*", "./src/core/**/*.*"],
  "exclude": ["./dist", "./node_modules", "./src/**/*.test.tsx", "./src/**/*.stories.tsx"]
}
